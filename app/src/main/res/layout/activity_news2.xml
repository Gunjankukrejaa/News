<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/islandimage"
    tools:context=".news2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector1_navigateleft"
        android:id="@+id/imageview_1"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vectormenu"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:id="@+id/imageview_2"/>

    <TextView
        android:id="@+id/textview_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="22dp"
        android:text="Category"
        android:layout_above="@id/innerrelative_layout_1"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/innerrelative_layout_1"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_13"
            android:text="Explore Sentosa,Singapore"
            android:textSize="38dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_14"
            android:layout_below="@id/textview_13"
            android:text="Just nature!!"
            android:textSize="26dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageview_15"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp"
            android:src="@drawable/vectorimage"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/textview_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:text="Drop down"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageview_13"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="131dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="21dp"
                android:src="@drawable/vector3_dropdown" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>